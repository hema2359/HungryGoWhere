<?xml version="1.0" encoding="utf-8"?>
<com.example.hungry.customview.AnimationLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/anim_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <LinearLayout 
        android:id="@+id/lt_sidebar"
        android:layout_width="200dp"
        android:layout_height="match_parent"  
        android:orientation="vertical"
        android:visibility="invisible"
        >
        <LinearLayout 
             android:layout_width="match_parent"
            android:layout_height="wrap_content">
         <Button
            android:id="@+id/button_side"
             android:layout_width="wrap_content"
       		 android:layout_height="wrap_content"  
            android:text="side" />
         </LinearLayout>
         <ListView
        android:id="@+id/lv_side"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>
   </LinearLayout>
  <LinearLayout 
        android:id="@+id/lt_Filterbar"
        android:layout_width="200dp"
        android:layout_height="match_parent"  
        android:orientation="vertical"
        android:visibility="invisible"
        >
        <LinearLayout 
             android:layout_width="match_parent"
            android:layout_height="wrap_content">
         <Button
            android:id="@+id/button_filter"
             android:layout_width="wrap_content"
       		 android:layout_height="wrap_content"  
            android:text="filter" />
         </LinearLayout>
         <ListView
        android:id="@+id/lv_filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>
   </LinearLayout>
<LinearLayout
    android:id="@+id/lt_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >

    <LinearLayout
        android:id="@+id/lt_header"
        android:layout_width="match_parent"
        android:layout_height="50dp" 
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/btn_hb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/side_menu" />

       <Button
            android:id="@+id/btn_discover"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Around Me" />
       
       <ImageView
            android:id="@+id/btn_filter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/filter_menu" />

    </LinearLayout>
    <RelativeLayout 
        android:id="@+id/ft_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
        >
 		
    <LinearLayout
        android:id="@+id/lt_discover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff0000"
        android:orientation="vertical" 
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hgwm_landing" />

    </LinearLayout>
    <LinearLayout 
       	android:id="@+id/lt_toplist"
   		android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#00ff00"
        android:visibility="invisible"
        android:orientation="vertical" >
        
         
       <ListView
        android:id="@+id/lv_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
       </ListView>
   </LinearLayout>
    </RelativeLayout>

</LinearLayout>
</com.example.hungry.customview.AnimationLayout>