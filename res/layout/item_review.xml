<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="5dp"
    android:background="@color/bg_dark"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        
        >

        <com.example.hungry.customview.CircleImageView
            android:id="@+id/iv_review_profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/btn_want_selected" />

        <TextView
            android:id="@+id/tv_review_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/txt_heavy"
            android:textSize="18dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_review_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/txt_light"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/speech_bubble"
        android:orientation="vertical" 
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        >

        <TextView
            android:id="@+id/tv_review_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_heavy"
            android:maxLines="4"
            android:ellipsize="end"
            android:text="Users can share the restaurant via the following options: Facebook, Twitter, SMS and Email. The URL will be a shortened URL link of the restaurant page provided by the server. For Facebook share, the post will only be shared on the user's wall. " />

        <TextView
            android:id="@+id/tv_review_see_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_red"
            android:text="@string/see_more" />
        
    </LinearLayout>

</LinearLayout>